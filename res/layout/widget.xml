<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/appwidget_bg" >

    <RelativeLayout
        android:id="@+id/layoutinternal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" >

        <ImageView
            android:id="@+id/widget_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true" >
        </ImageView>
<!-- no se pueden poner edit text en los widgets!!! -->
        <TextView
            android:id="@+id/widget_nickname_subida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/widget_image"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:textColor="@color/android_color"
            android:textSize="12dp" >
        </TextView>

        <TextView
            android:id="@+id/widget_nickname_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/widget_nickname_subida"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:textColor="@color/gris_widget_color"
            android:textSize="12dp" >
        </TextView>
        
        <!-- 
         <Button android:id="@+id/irMenu"
                android:tag="irMenu"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                 android:layout_below="@+id/widget_nickname_user"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:text="@string/irMenu"
                />
         -->
    </RelativeLayout>
    <!-- style="@style/WidgetText" -->
    <!-- android:background="@color/fondo_nick_widget" -->

</FrameLayout>